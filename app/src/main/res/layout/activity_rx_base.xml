<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/simple"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="simple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/doOnNext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="doOnNext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simple" />


        <Button
            android:id="@+id/zip"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="zip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doOnNext" />


        <Button
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="map"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/zip" />


        <Button
            android:id="@+id/flatmap"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="flatmap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map" />

        <Button
            android:id="@+id/flowable"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="flowable"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flatmap" />


        <Button
            android:id="@+id/flowable128"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="flowable128"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowable" />

        <Button
            android:id="@+id/singleObserable"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="singleObserable"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowable128" />


        <Button
            android:id="@+id/interval"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="interval"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/singleObserable" />

        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowable128" />


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>